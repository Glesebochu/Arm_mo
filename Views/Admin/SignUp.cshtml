@model Arm_mo.DTO.SignUpDTO;
@{
    Layout = "_Layout";
}

<h2>SignUp Form</h2>
<hr />

<form asp-controller="Admin" asp-action="SignUp" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" class="form-control mb-2" />
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control mb-2" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control mb-2" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control mb-2" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="SignUp" class="btn btn-primary bm-2" />
    </div>
</form>
