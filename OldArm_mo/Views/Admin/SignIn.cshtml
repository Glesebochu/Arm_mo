@model Arm_mo.DTO.SignInDTO

@{
    Layout = "_Layout";
}

<h4>SignIn Form</h4>
<hr />

<div class="mb-2">

    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control mb-2" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control mb-2" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="RememberMe" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-check-input" asp-for="RememberMe" class="form-control mb-2" />
            </div>
            <span asp-validation-for="RememberMe" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input type="submit" value="SignIn" class="btn btn-primary mb-5" />
        </div>
    </form>
</div>

<div class="container mt-5">
    <p>CLick <a asp-controller="Admin" asp-action="SignUp">here</a> to SignUp</p>
</div>
